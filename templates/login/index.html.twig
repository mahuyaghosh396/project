{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Login{% endblock %}
{% block stylesheets %}
{{parent()}}
{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="px-5 py-4 shadow">
                <form action="{{ path('app_login') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" class="form-control" name="_username" value="{{ last_username }}"/>
                        <label class="form-label" for="email">Email address</label>
                    </div>
        
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="password" class="form-control" name="_password" />
                        <label class="form-label" for="password">Password</label>
                    </div>
        
        
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                    
                    
                    <!-- Register buttons -->
                    <div class="text-center">
                        <div class="text-danger mb-2">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                        <p>Not a member? <a href="{{path('web_signup')}}">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
{% endblock %}