{% block body %}

<body>
    <div class=".bimg">
        <div class="full-page">
            <div class="navbar">
            </div>
            <div id="login-form" class="login-page">
                <div class="form-box">
                    <h1 style="text-align:center">Enter Your Details</h1>


                    <form id="register" class="input-group-register" action="" method="post">
                        <br>

                        <div class="row">
                            <div class="col-6">
                                <label for="">First Name: </label>
                                <input type="text" name="firstname" class="input-field form-control"
                                    placeholder="First Name" required>
                            </div>
                            <div class="col-6">
                                <label for="">Last Name: </label>
                                <input type="text" name="lastname" class="input-field form-control"
                                    placeholder="Last Name" required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">Email:</label>
                                <input type="email" name="email" class="input-field form-control" placeholder="Email Id"
                                    required>
                            </div>


                            <div class="col-6">
                                <label for="">Cell Phone No:</label>
                                <input type="tel" name="tel" pattern="[0-9]{10}" class="input-field form-control"
                                    placeholder="Phone No" required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">Academic Year:</label>
                                <input type="number" name="year" class="input-field form-control" placeholder="YYYY"
                                    required>

                            </div>
                            <div class="col-6">
                                <label for="">DOB:</label>
                                <input type="Date" name="DOB" class="input-field form-control" placeholder="name"
                                    required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">Registration No:</label>
                                <input type="number" name="reg_no" class="input-field form-control" placeholder="Reg no"
                                    required>
                            </div>


                            <div class="col-6">

                                <label for="">Roll No:</label>
                                <input type="number" name="roll_no" class="input-field form-control"
                                    placeholder="Roll no" required>
                            </div>
                        </div>
                        <br>



                        
                        <div class="row">

                            <div class="col-6">
                                <label>Department:</label>
                                <Select name=dept id="sem" class="input-field form-control" required>
                                    <option value=>select</option>
                                    <option value=CST>CST</option>
                                    <option value=ETC>ETC</option>
                                    <option value=ARCH>ARCH</option>

                                </Select>
                            </div>


                            <div class="col-md-6">
                                <label for="">Password:</label>
                                <input type="password" name="password" class="input-field form-control"
                                    placeholder="Enter Password" required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">confirm password:</label>
                                <input type="password" name="confirmpassword" class="input-field form-control"
                                    placeholder="Confirm Password" required>
                            </div>
                        </div>
                        <br>
                        <input type="checkbox" class="check-box"><span>I agree to the terms &
                            Conditions</span>
                        <div class="col-12">
                            {% for flashMessage in app.session.flashbag.get('successmsg')%}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <!-- <strong>
                                 Error!!
                             </strong> -->
                                {{ flashMessage}}
                            </div>
                            {% endfor %}


                            {% for flashMessage in app.session.flashbag.get('errormsg')%}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <!-- <strong>
                                 Error!!
                             </strong> -->
                                {{ flashMessage}}
                            </div>
                            {% endfor %}

                        </div>
                        <br>
                        <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Submit">
                       </div>

                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</body>



