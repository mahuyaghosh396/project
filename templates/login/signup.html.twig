{% extends 'base.html.twig' %}
{% block title %}{{parent()}}Signup{% endblock %}
{% block stylesheets %}
<style>
    .full-page {
        height: 150px;
        width: 120px;
        background-image: linear linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4));
        padding-left: 400px;
        background-size: cover;
    }
    body {
        background-image: url(https://redpithemes.com/Documentation/assets/img/page_bg/page_bg_blur02.jpg);
    }
    .form-box {
        width: 800px;
        height: 900px;
        margin: 5% auto;
        background: rgba(53, 80, 88, 0.315);
    }
    .button-box {
        position: relative;
    }
    
    #btn {
        top: 0;
        left: 0;
        position: absolute;
        width: 100px;
        height: 100%;
        background: #F3c693;
        border-radius: .5s;
    }
    .input-group-register {
        top: 120px;
        padding-left: 100px;
        width: 700px;
        transition: .5s;
    }
    .input-feild {
        width: 300px;
        margin: 16px 0;
    }
    .submit-btn {
        width: 120px;
        padding: 13px 15px;
        cursor: pointer;
        display: block;
        margin: auto;
        background: #93d0f3;
        border: 0;
        outline: none;
        border-radius: 30px;
    }
    .check-box {
        margin: 7px 5px 7px 18px;
    }
    span {
        color: rgb(17, 17, 17);
        font-size: 16px;
        
        position: absolute;
    }
    #register {
        left: 450px;
    }
    #register input {
        color: black;
        font-size: 15;
    }
</style>
{% endblock %}
{% block body %}
<body>
    <div class=".bimg">
        <div class="full-page">
            <div class="navbar">
            </div>
            <div id="login-form" class="login-page">
                <div class="form-box">
                    <h1 style="text-align:center">Register Here</h1>


                    <form id="register" class="input-group-register" action="" method="post">
                        <br>
                        
                        <div class="row">
                            <div class="col-6">
                                <label for="">First Name: </label>
                                <input type="text" name="firstname" class="input-field form-control" placeholder="First name"
                                    required>
                            </div>
                            <div class="col-6">
                                <label for="">Last Name: </label>
                                <input type="text" name="lastname" class="input-field form-control" placeholder="last name"
                                    required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">email:</label>
                                <input type="email" name="email"class="input-field form-control" placeholder="Email Id" required>
                            </div>


                            <div class="col-6">
                                <label for="">cell phone no:</label>
                                <input type="tel" name="tel" pattern="[0-9]{10}" class="input-field form-control"
                                    placeholder="phone no" required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">Academic year:</label>
                                <input type="number" name="year" class="input-field form-control" placeholder="DOB"
                                    required>

                            </div>
                            <div class="col-6">
                                <label for="">DOB:</label>
                                <input type="Date" name="DOB" class="input-field form-control" placeholder="name"
                                    required>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-6">
                                <label for="">Registration no:</label>
                                <input type="number" name="reg_no" class="input-field form-control" placeholder="Reg no"
                                    required>
                            </div>


                            <div class="col-6">

                                <label for="">Roll no:</label>
                                <input type="number" name="roll_no" class="input-field form-control" placeholder="Roll no"
                                    required>
                            </div>
                        </div>
                        <br>



                        <br>
                        <div class="row">
                           
                            <div class="col-6">
                                <label>Role:</label>
                                <Select name=role[] id="sem" class="input-field form-control" required>
                                    <option value=>select</option>
                                    <option value=Admin>Admin</option>
                                    <option value=Lecturer>Lecturer</option>
                                    <option value=Student>Student</option>

                                </Select>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="">password:</label>
                                <input type="password" name="password" class="input-field form-control"
                                    placeholder="Enter password" required>
                            </div>
                            <div class="col-6">
                                <label for="">confirm password:</label>
                                <input type="password" name="confirmpassword" class="input-field form-control"
                                    placeholder="Confirm password" required>
                            </div>
                        </div>
                        <br>
                        <input type="checkbox" class="check-box"><span>I agree to the terms &
                            Conditions</span>
                         <div class="col-12">
                         {% for flashMessage in app.session.flashbag.get('successmsg')%}
                         <div class="alert alert-danger alert-dismissible" role="alert" >
                             <!-- <strong>
                                 Error!!
                             </strong> -->
                            {{ flashMessage}}
                         </div>
                         {% endfor %}


                         {% for flashMessage in app.session.flashbag.get('errormsg')%}
                         <div class="alert alert-danger alert-dismissible" role="alert" >
                             <!-- <strong>
                                 Error!!
                             </strong> -->
                            {{ flashMessage}}
                         </div>
                         {% endfor %}

                        </div>
                             <br>
                        <button type="submit" class="submit-btn">Register</button>


                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</body>



