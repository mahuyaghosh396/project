{% extends 'back_end_base.html.twig' %}

{% block title %}
	{{parent()}}{{title}}
{% endblock %}
{% block stylesheets %}
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-6">
			<div class="shadow p-4 bg-white">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-12">
						{{ form_row(form.name) }}
					</div>
				</div>
				<div class="row my-3">
					<div class="col-12">
						{{ form_row(form.code) }}
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<button type="submit" class="btn btn-primary">{{btn}}</button>
					</div>
				</div>
				{{ form_rest(form) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
