{% extends 'back_end_base.html.twig' %}

{% block title %}{{parent()}}{{title}}{% endblock %}
{% block stylesheets %}
{{parent()}}
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-4">
        <div class="shadow px-5 py-4 bg-white">
            {{ form_start(form) }}
            <div class="form-outline mb-5">
                {{ form_row(form.name) }}
                {{ form_row(form.code) }}
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">{{btn}}</button>
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}